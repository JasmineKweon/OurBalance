<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Our Balance</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/calendar.css">
</head>

<body>
    <a href="/" class="btn">Home</a>
    <a href="/records/index" class="btn">Index</a>
    <a href="/records/calendar" class="btn">Calendar</a>
    <a href="/records/analytics" class="btn">Analytics</a>
    <a href="/records/new/spending" class="btn">Add New</a>
    <!-- Calendar-->
    <div class="calendar">
        <div class="header">
            <div class="year-month"></div>
            <div class="nav">
                <button class="nav-btn go-prev">&lt;</button>
                <button class="nav-btn go-today">today</button>
                <button class="nav-btn go-next">&gt;</button>
            </div>
        </div>
        <div class="main">
            <div class="days">
                <div class="day">Sun</div>
                <div class="day">Mon</div>
                <div class="day">Tue</div>
                <div class="day">Wed</div>
                <div class="day">Thur</div>
                <div class="day">Fri</div>
                <div class="day">Sat</div>
            </div>
            <div class="dates">
                <%for(date of dates){%>
                    <div class="date">
                        <button id="submit" type="button" class="btn btn-light btn-sm" data-bs-toggle="modal" data-bs-target="#indexModal<%=date.index%>"><%=date.date.getDate()%></button>
                        <div class="money">
                            <% if (date.totalIncome != null && date.totalIncome !== 0) { %>
                                <span class="income">+ 짜<%=date.totalIncome%></span>
                                <% } else { %>
                                    <span class="income">&nbsp;</span>
                                    <% } %>
                                        <br>
                                        <% if (date.totalSpending != null && date.totalSpending !== 0) { %>
                                            <span class="spending">- 짜<%=date.totalSpending%></span>
                                            <% } else { %>
                                                <span class="spending">&nbsp;</span>
                                                <% } %>
                        </div>
                    </div>
                    <!--Modal-->
                    <div class="modal fade" id="indexModal<%=date.index%>" tabindex="-1" aria-labelledby="indexModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="indexModalLabel">
                                        <%= moment(date.date).format('yyyy-MM-DD')%>
                                    </h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <br>
                                    <%for(record of date.records){%>
                                        <div>
                                            <div class="row">
                                                <div class="col-md-4">
                                                    <a href="/records/show" class="tooltip-test" title="Tooltip">
                                                        <h5>
                                                            <%=record.description%>
                                                        </h5>
                                                    </a>
                                                </div>
                                                <div class="col-md-3 ms-auto">
                                                    <% if ((record.category.type) === "Income") { %>
                                                        <h5><span class="income">+ 짜<%=record.price%></span></h5>
                                                        <%} else {%>
                                                            <h5><span class="spending">- 짜<%=record.price%></span></h5>
                                                            <%}%>
                                                </div>
                                            </div>
                                            <h6>Payer:
                                                <%=record.payer.username%>
                                            </h6>
                                            <h6>Category:
                                                <%=record.category.name%>
                                            </h6>
                                        </div>
                                        <br>
                                        <%}%>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-dark" data-bs-dismiss="modal">Close</button>
                                    <a href="/records/new" class="btn btn-primary">Add New</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <%}%>
            </div>
        </div>
        <div class="footer">

        </div>
    </div>

    <!--Summary-->
    <div class="summary">
        <div class="monthly-summary">

        </div>
        <div class="total-summary">

        </div>
        <div class="payment-statement">

        </div>
        <div class="debt-statement">

        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>

</html>